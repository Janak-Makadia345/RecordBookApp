@model RecordBookApp.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-2sG9Ep7/vHrHLFFpHQ6kLe6bLfW7DyAp7gD93VtGfuxr9pJbA1BCoIgPhP7wQ3ubWl+ZUz3kQDRQllNrcHToqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Custom CSS -->
    <style>
        h3 {
            color: midnightblue;
            font-weight: bold;
        }

        html, body {
            height: 100%;
            background-color: #f8f9fa;
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden; /* Ensure card edges are smooth */
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: none;
            border-radius: 15px 15px 0 0;
            padding: 1.5rem;
            text-align: center;
        }

        .card-body {
            padding: 2rem;
        }

        .card-footer {
            background-color: #f8f9fa;
            border-top: none;
            border-radius: 0 0 15px 15px;
            padding: 1rem;
            text-align: center;
        }

        .invalid-input {
            color: red;
            font-size: small
        }

        /* Custom styling for form elements */
        .form-check-label {
            font-weight: normal;
        }

        /* Animation for form elements */
        .animated-input {
            position: relative;
        }

            .animated-input input,
            .animated-input textarea {
                font-size: 16px;
                padding: 10px;
                display: block;
                width: 100%;
                border: none;
                border-bottom: 1px solid #ccc;
                background: transparent;
                transition: border-bottom-color 0.3s, transform 0.3s; /* Added transform transition */
            }

                .animated-input input:focus,
                .animated-input textarea:focus {
                    outline: none;
                    border-bottom-color: #007bff;
                    transform: scale(1.01); /* Scale up on focus */
                }

            .animated-input label {
                position: absolute;
                top: 0;
                left: 0;
                font-size: 16px;
                padding: 10px;
                pointer-events: none;
                transition: all 0.3s;
                color: #999;
            }

            .animated-input input:focus ~ label,
            .animated-input textarea:focus ~ label,
            .animated-input input:not(:placeholder-shown) ~ label,
            .animated-input textarea:not(:placeholder-shown) ~ label {
                font-size: 12px;
                top: -20px;
                color: #007bff;
            }

        /* Icon styling */
        .icon {
            position: absolute;
            right: 10px;
            top: calc(50% - 12px);
            color: #aaa;
        }

        .btn-primary {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="mb-0">User Sign-Up</h3>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-success">@ViewBag.Message</div>
                        }
                        <form asp-action="Create" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3 animated-input">
                                <input asp-for="FullName" class="form-control" id="fullname" aria-describedby="fullnameHelp">
                                <label asp-for="FullName">Full Name</label>
                                <i class="icon bi bi-person-vcard-fill"></i>
                                <span asp-validation-for="FullName" class="invalid-input"></span>
                            </div>
                            <div class="mb-3 animated-input">
                                <input asp-for="Username" class="form-control" id="username" aria-describedby="usernameHelp">
                                <label asp-for="Username">Username</label>
                                <i class="icon fas fa-user"></i>
                                <span asp-validation-for="Username" class="invalid-input"></span>
                            </div>
                            <div class="mb-3 animated-input">
                                <input asp-for="Email" class="form-control" id="email" aria-describedby="emailHelp">
                                <label asp-for="Email">Email address</label>
                                <i class="icon fas fa-envelope"></i>
                                <span asp-validation-for="Email" class="invalid-input"></span>
                            </div>
                            <div class="mb-3 animated-input">
                                <input asp-for="Password" type="password" class="form-control" id="password">
                                <label asp-for="Password">Password</label>
                                <i class="icon fas fa-lock"></i>
                                <span asp-validation-for="Password" class="invalid-input"></span>
                            </div>
                            <div class="mb-3 animated-input">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword">
                                <label asp-for="ConfirmPassword">Confirm Password</label>
                                <i class="icon fas fa-lock"></i>
                                <span asp-validation-for="ConfirmPassword" class="invalid-input"></span>
                            </div>
                            <div class="form-group mb-0">
                                <button type="submit" class="btn btn-primary">Sign Up</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <p class="mb-0">Already have an account? <a asp-action="SignIn" class="text-decoration-none">Sign In</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS (optional if you don't need JavaScript) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-LYZ2huCZ6E5ZzKzjQQSgFmqKJSQq6/WXRSLQK5Oan8/a0D1tA+L1KmvxDG6+48+m" crossorigin="anonymous"></script>
</body>
</html>

@model RecordBookApp.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Edit Book</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="BookId" />
                        <div class="mb-3">
                            <label asp-for="BookName" class="form-label">Book Name</label>
                            <input asp-for="BookName" class="form-control" />
                            <span asp-validation-for="BookName" class="invalid-input"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label">User ID</label>
                            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId" disabled="disabled"></select>
                            <span asp-validation-for="UserId" class="invalid-input"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Save Changes" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index">Back to Book List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

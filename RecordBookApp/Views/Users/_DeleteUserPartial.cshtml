<div class="modal-body">
    <div class="alert alert-warning d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div class="flex-grow-1">
            <h6 class="modal-title" style="color: saddlebrown">Are you sure you want to delete your account?</h6>
            <p class="small-text mb-0">All the books and related records will be deleted along with your account.</p>
        </div>
    </div>
    <form id="deleteUserForm">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label for="password" class="form-label">Please type your "Current password" to delete:</label>
            <input type="password" placeholder="Enter Password" class="form-control" id="password" name="password" required />
        </div>
        <div class="text-danger" id="error-message"></div>
    </form>
</div>

<style>
    .mb-3 {
        margin-bottom: 1rem;
    }

    .btn-close {
        background: none;
        border: none;
        font-size: 1.5rem;
    }

    .alert-warning {
        display: flex;
        align-items: center;
    }

    .alert-warning .bi {
        font-size: 1.5em;
    }

    .modal-title {
        font-size: 1.2em;
        font-weight: bold;
    }

    .small-text {
        font-size: 0.875em;
        margin-top: 4px;
    }

    .me-2 {
        margin-right: 1.3rem !important;
    }

    .flex-grow-1 {
        flex-grow: 1;
    }
</style>

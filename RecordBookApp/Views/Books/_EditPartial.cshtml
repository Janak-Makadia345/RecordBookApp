@model RecordBookApp.Models.BookView

<form id="editBookForm">
     @Html.AntiForgeryToken()
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
     <div class="mb-3">
         <label asp-for="BookName" class="form-label">Book Name</label>
         <input asp-for="BookName" class="form-control" placeholder="e.g. Daily Expense"/>
         <span asp-validation-for="BookName" class="invalid-feedback d-block" style="font-size: small; margin-top: 10px; border-radius: 4px;"></span>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
